<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ken.UniversityApp">

    <!-- Internet permissions for loading PDFs/images from GitHub -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UniversityApp">

        <!-- Main launcher activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Other activities -->
        <activity android:name=".YearSemesterActivity" />
        <activity android:name=".SemesterUnitsActivity" />
        <activity android:name=".UnitsListActivity" />

        <!-- PaperListActivity - Make sure it's properly configured -->
        <activity
            android:name=".PaperListActivity"
            android:exported="false" />

        <!-- PaperDetailActivity - Add proper configuration -->
        <activity
            android:name=".PaperDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.UniversityApp" />

        <activity android:name=".SemesterSelectionActivity" />
        <activity android:name=".GitHubPaperViewerActivity" />
        <activity android:name=".PaperViewActivity" />

        <!-- Add the missing CourseSelectionActivity -->
        <activity android:name=".model.CourseSelectionActivity" />

    </application>
</manifest>